<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF9800"
        tools:context=".SplashActivity">



    <!--<ImageView android:layout_width="match_parent"-->
               <!--android:layout_height="match_parent"-->
    <!--android:src="@drawable/back_text"-->
    <!--/>-->


    <TextView
            android:lineSpacingMultiplier="0.8"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="48sp"
            android:textColor="#eb8d03"
            android:textFontWeight="200"
            android:fontFamily="@font/one"
            android:text="PEOPLE.\nWORK.\nCULTURE\nSTARTUPS.\nLSPHERESHIP.\nTALENT.\nTRAINING.\nBENEFITS.\nSTRATEGY.\nBIGHIRES.\nENGAGE.\nAPPRAISE.\nGROWTH."
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>




    <ImageView

            android:layout_marginTop="220dp"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"

            android:scaleType="centerCrop"
            android:id="@+id/img_1"
            android:tint="@android:color/black"
            android:src="@drawable/main_heading"
            android:layout_width="110dp"
            android:layout_height="16dp"/>


    <TextView
            android:layout_marginTop="-14dp"
            android:layout_below="@id/img_1"
            android:id="@+id/sp_text"
            android:textSize="48sp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:fontFamily="@font/one"
            android:textFontWeight="200"
            android:textColor="@android:color/white"
            android:text="SPHERE."
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <ImageView

            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_below="@id/img_1"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/sphere"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>




    <ImageView
            android:layout_marginBottom="-24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/oval"
            android:layout_width="200dp" android:layout_height="200dp"/>


    <TextView
            android:visibility="gone"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="@string/version"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/popins"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>









</RelativeLayout>